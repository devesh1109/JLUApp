<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@drawable/back2"
    android:padding="20dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:alpha="0.9"
        android:background="#ffffff"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

<android.support.design.widget.TextInputLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="15dp"
    android:id="@+id/enq_name">
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Name"
        android:textColorHint="@color/colorAccent"
        android:id="@+id/enq_name_txt"
        android:singleLine="true"/>

</android.support.design.widget.TextInputLayout>
<android.support.design.widget.TextInputLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/enq_subject"
    android:layout_below="@+id/enq_name">
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Subject"
        android:id="@+id/enq_subject_txt"
        android:textColorHint="@color/colorAccent"
        android:singleLine="true"/>
    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/enq_city"
        android:layout_below="@+id/enq_subject">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="City"
            android:id="@+id/enq_city_txt"
            android:textColorHint="@color/colorAccent"
            android:singleLine="true"/>
    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/enq_message"
        android:layout_below="@+id/enq_city">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:hint="Message"
            android:id="@+id/enq_message_txt"
            android:textColorHint="@color/colorAccent"
            android:singleLine="false"/>

    </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/enq_mail"
            android:layout_below="@+id/enq_message">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:hint="Email Id"
                android:id="@+id/enq_email_txt"
                android:textColorHint="@color/colorAccent"
                android:singleLine="false"/>

        </android.support.design.widget.TextInputLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Send"
            android:id="@+id/buttonSend"
            android:layout_below="@+id/enq_mail"
            android:layout_centerHorizontal="true"
            android:background="@drawable/borders" />


    </RelativeLayout>
</ScrollView>
