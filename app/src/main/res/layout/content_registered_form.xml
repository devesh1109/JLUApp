<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:padding="10dp"
    android:background="@drawable/back3">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:id="@+id/rl_current"
        android:background="@drawable/borders"
        android:padding="10dp"
        android:layout_below="@+id/rllll"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="40dp">



        <android.support.design.widget.TextInputLayout
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:id="@+id/vieww1"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_toLeftOf="@+id/cButton"
            android:layout_toStartOf="@+id/cButton">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/cformEditText"
                android:hint="Enter Roll No."
                android:layout_alignBottom="@+id/cButton"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_toLeftOf="@+id/cButton"
                android:layout_toStartOf="@+id/cButton" />



        </android.support.design.widget.TextInputLayout>

        <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:text="Enter"
        android:id="@+id/cButton"
            android:padding="10dp"
            android:background="@drawable/borders"
            android:alpha="0.7"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />



    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/borders"
        android:id="@+id/rl_pros"
        android:layout_marginTop="40dp"
        android:padding="10dp"
        android:layout_below="@+id/rllll">

        <android.support.design.widget.TextInputLayout
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:id="@+id/vieww"
            android:layout_alignParentTop="false"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="30dp"
            android:layout_toLeftOf="@+id/pbutton"
            android:layout_toStartOf="@+id/pbutton">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/pformEditText"
                android:hint="Enter prospective form no."
                android:layout_above="@+id/vieww1"
                android:layout_toLeftOf="@+id/pbutton"
                android:layout_toStartOf="@+id/pbutton" />


        </android.support.design.widget.TextInputLayout>

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:text="Enter"
            android:id="@+id/pbutton"
            android:padding="10dp"
            android:background="@drawable/borders"
            android:alpha="0.7"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/borders"
        android:id="@+id/rl_faculty"
        android:padding="10dp"
        android:layout_below="@+id/rllll"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="40dp">

        <android.support.design.widget.TextInputLayout
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:id="@+id/view2"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="30dp"
            android:layout_toLeftOf="@+id/fButton"
            android:layout_toStartOf="@+id/fButton">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/fformEditText"
                android:hint="Enter Faculty Id"
                android:layout_alignBottom="@+id/view2"
                android:layout_toLeftOf="@+id/fButton"
                android:layout_toStartOf="@+id/fButton" />

        </android.support.design.widget.TextInputLayout>

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:text="Enter"
            android:id="@+id/fButton"
            android:background="@drawable/borders"
            android:padding="10dp"
            android:alpha="0.7"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>

    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/t_student"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/rllll"
        android:layout_marginTop="50dp">

        <TextView
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Faculty"
            android:id="@+id/t_faculty"
            android:padding="10dp"
            android:background="@drawable/circulerimageview"
            android:layout_alignTop="@+id/t_student"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:textColor="#000000"
            android:gravity="center"
            android:alpha="0.7"
            android:layout_gravity="right|center_horizontal"
            android:textSize="12dp"
            android:layout_marginLeft="10dp" />

        <TextView
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Students"
            android:id="@+id/t_student"
            android:padding="10dp"
            android:background="@drawable/circulerimageview"
            android:textColor="#000000"
            android:gravity="center"
            android:alpha="0.7"
            android:textSize="12dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Prospective"
            android:id="@+id/t_pros"
            android:textColor="#000000"
            android:background="@drawable/circulerimageview"
            android:padding="10dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:alpha="0.7"
            android:textSize="12dp"
            android:layout_gravity="right"
            android:gravity="center" />

    </RelativeLayout>


</RelativeLayout>